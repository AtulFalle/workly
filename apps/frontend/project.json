{
  "name": "workly",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/frontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/frontend/browser",
        "index": "apps/frontend/src/index.html",
        "main": "apps/frontend/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/frontend/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/frontend/public"
          }
        ],
        "styles": [
          "apps/frontend/src/styles.scss",
          "libs/design-system/src/lib/assets/design-system.scss"
        ],
        "customWebpackConfig": {
          "path": "apps/frontend/webpack.config.ts"
        },
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/design-system/src/lib/assets"
          ]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      },
      "configurations": {
        "production": {
          "buildTarget": "workly:build:production"
        },
        "development": {
          "buildTarget": "workly:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "workly:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts",
        "tsConfig": "apps/frontend/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "workly:build",
        "port": 4200,
        "spa": true
      }
    },
    "server": {
      "dependsOn": [
        "build"
      ],
      "executor": "@nx/angular:webpack-server",
      "options": {
        "outputPath": "dist/apps/frontend/server",
        "main": "apps/frontend/src/server.ts",
        "tsConfig": "apps/frontend/tsconfig.server.json",
        "inlineStyleLanguage": "scss",
        "customWebpackConfig": {
          "path": "apps/frontend/webpack.server.config.ts"
        }
      },
      "configurations": {
        "production": {
          "outputHashing": "media"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-ssr": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-ssr",
      "configurations": {
        "development": {
          "browserTarget": "workly:build:development",
          "serverTarget": "workly:server:development"
        },
        "production": {
          "browserTarget": "workly:build:production",
          "serverTarget": "workly:server:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "prerender": {
      "executor": "@angular-devkit/build-angular:prerender",
      "options": {
        "routes": [
          "/"
        ]
      },
      "configurations": {
        "development": {
          "browserTarget": "workly:build:development",
          "serverTarget": "workly:server:development"
        },
        "production": {
          "browserTarget": "workly:build:production",
          "serverTarget": "workly:server:production"
        }
      },
      "defaultConfiguration": "production"
    }
  }
}