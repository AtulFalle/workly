{
  "name": "design-system",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/design-system/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/design-system/ng-package.json",
        "tsConfig": "libs/design-system/tsconfig.lib.json"
        
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/design-system/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/design-system/jest.config.ts",
        "tsConfig": "libs/design-system/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/design-system/.storybook",
        "browserTarget": "design-system:build-storybook",
        "compodoc": false,
        "styles": [
          "libs/design-system/src/lib/assets/design-system.scss",
          "libs/design-system/src/lib/assets/layout/layout.scss",
          "libs/design-system/src/lib/assets/demo/demo.scss",
          "libs/design-system/src/lib/assets/lib-tailwind.css"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/design-system/src/lib/assets", "node_modules"]
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/design-system",
        "configDir": "libs/design-system/.storybook",
        "browserTarget": "design-system:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "design-system:build-storybook",
        "staticFilePath": "dist/storybook/design-system",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "design-system:build-storybook:ci"
        }
      }
    }
  }
}
